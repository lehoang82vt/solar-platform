{
  "name": "@solar/backend",
  "version": "0.1.0",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "dev": "cross-env PORT=3000 ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "ts-node src/db/migrate.ts",
    "migrate:rollback": "ts-node src/db/migrate.ts rollback",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "test": "node --test",
    "test:f02": "node --test src/__tests__/f02.test.ts",
    "test:all": "node -r ts-node/register --test \"src/__tests__/*.test.ts\"",
    "verify:f09_f16": "powershell -ExecutionPolicy Bypass -File scripts/verify-f09-f16.ps1"
  },
  "dependencies": {
    "@solar/shared": "*",
    "@types/jsonwebtoken": "^9.0.10",
    "bull": "^4.16.5",
    "cors": "^2.8.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.2.0",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.11.0",
    "redis": "^4.6.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bull": "^3.15.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.5.0",
    "@types/node-cron": "^3.0.11",
    "@types/pdfkit": "^0.17.4",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
